{
  "version": 2,
  "installCommand": "npm install && npm run build",
  "builds": [
    {
      "src": "server.js",
      "use": "@vercel/node",
      "config": {
        "maxDuration": 60
      }
    },
    {
      "src": "public/**",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/riot.txt",
      "dest": "public/riot.txt"
    },
    {
      "src": "/(.*)",
      "dest": "server.js"
    }
  ]
}
